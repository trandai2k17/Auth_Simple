@model RoleVM;
@{
    ViewData["Title"] = "Role List";
}

<h1>@ViewData["Title"]</h1>


<form method="post" asp-action="Create" asp-controller="Role" asp-area="Identity">
    <div class="row p-3">
        <div class="col-md-3 justify-content-center">
            @if (!string.IsNullOrEmpty(Model.RoleID))
            {
                <input asp-for="RoleID" type="hidden" name="RoleID" value="@Model.RoleID" />
                <button type="submit" class="btn btn-outline-info">Update</button>
            }
            else
            {
                <button type="submit" class="btn btn-outline-info">Create</button>
            }
        </div>
        <div class="col-md-6 justify-content-center">
            <input asp-for="RoleName" class="form-control" placeholder="Role name..." />
        </div>

    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-action="Update" asp-controller="Role" asp-area="Identity" method="get" style="display:inline;">
                        <input asp-for="RoleID" type="hidden" name="RoleID" value="@role.Id" />
                        <input asp-for="RoleName" type="hidden" name="RoleName" value="@role.Name" />
                        <button type="submit">Update</button>
                    </form>
                </td>
                <td>
                    <form asp-action="Delete" asp-controller="Role" asp-area="Identity" method="post" style="display:inline;">
                        <input asp-for="RoleID" type="hidden" name="RoleID" value="@role.Id" />
                        <input asp-for="RoleName" type="hidden" name="RoleName" value="@role.Name" />
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>  