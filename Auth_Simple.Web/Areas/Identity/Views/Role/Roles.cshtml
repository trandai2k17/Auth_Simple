@model RoleVM;
@{
    ViewData["Title"] = "Role List";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" asp-controller="Role" asp-area="Identity" method="post">
    <div class="row">
        <div class="col-md-6"><button class="btn btn-outline-info" type="submit">Create</button></div>
        <div class="col-md-6">
            <input asp-for="RoleName" class="form-control" placeholder="Role name..." />
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-action="Update" method="post" style="display:inline;">
                        <input asp-for="RoleID" type="hidden" name="RoleID" value="@role.Id" />
                        <input asp-for="RoleName" type="hidden" name="RoleName" value="@role.Name" />
                        <button type="submit">Update</button>
                    </form>
                </td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input asp-for="RoleID" type="hidden" name="RoleID" value="@role.Id" />
                        <input asp-for="RoleName" type="hidden" name="RoleName" value="@role.Name" />
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>  